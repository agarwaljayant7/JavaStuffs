package com.bcci.coach;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Application {

	public static void main(String[] args) {
		
		//Load the Spring Container through the context file.
		
		ClassPathXmlApplicationContext context = new ClassPathXmlApplicationContext("ApplicationContext.xml");
		
		//Get the beans from the container
		
		CricketCoach coach = context.getBean("cricketCoach", CricketCoach.class);
		
		//Call the methods
		System.out.println(coach.getDailyWorkOuts());
		System.out.println(coach.getDailyFortune());
		System.out.println(coach.getAdditionalFortune());
		System.out.println(coach.getTeamName());
		System.out.println(coach.getEmailAddress());
		
		//close the resources
		
		context.close();
	}

}
